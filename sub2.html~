<html>
    <head>
        <title>Sample Page</title>
        <script type="text/javascript">
			//各種変数を設定
			var today = new Date();
			var day = today.getDate();
			var month = today.getMonth() + 1;	
            var myday="";
			var toholiday = "";
			var flg = 0;
			//月+日で祝日の配列作成
            var holidaynum = new Array("2","13","32","8","9","10","14","34","35");
			//祝日名を配列で作成
			var holiday = new Array(
				"元旦","建国記念日","昭和の日","憲法記念日","みどりの日","こどもの日","文化の日","勤労感謝の日","天皇誕生日");
			
				myday += day + month;
				document.write(myday);
				for(var x = 0; x < 9 ;x++){
					if(holidaynum[x] == myday){
						toholiday = holiday[x];
						document.write(toholiday);
						flg++;
						break;
					}
				}
			if(flg == 0){
				document.write("今日は休みじゃねーんだよ");
			}
        </script>
        
    </head>
</html>
